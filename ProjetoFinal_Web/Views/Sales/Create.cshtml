@model ProjetoFinal_Web.Models.ViewModels.SaleFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Sale.ClientName" class="control-label"></label>
                <select asp-for="Sale.ClientName" asp-items="@(new SelectList(Model.Clients, "NameClient", "NameClient"))" class="form-control"></select>
            </div>

            <hr />

            <div class="form-group">
                <label asp-for="SaleProducts[0].ProductId" class="control-label"></label>
                <select asp-for="SaleProducts[0].ProductId" asp-items="@(new SelectList(Model.Products,"ProductId","ProductName"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="SaleProducts[0].Quantity" class="control-label"></label>
                <input asp-for="SaleProducts[0].Quantity" class="form-control" />
                <span asp-validation-for="SaleProducts[0].Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SaleProducts[0].UnitPrice" class="control-label"></label>
                <input asp-for="SaleProducts[0].UnitPrice" class="form-control" />
                <span asp-validation-for="SaleProducts[0].UnitPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn-default" />
            </div>
        </form>
    </div>

</div>

